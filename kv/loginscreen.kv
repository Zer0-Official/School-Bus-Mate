<LoginScreen>:

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: 'School Bus Mate'
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            color: app.theme_cls.accent_color
            padding_y: 15
        MDTextFieldRound:
            on_parent:self.focus = True
            id: user
            hint_text: 'school email'
            icon_left: 'account'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5}
            normal_color: app.theme_cls.accent_color
            color_active: 1,1,170/255,1
            required: True
            on_text_validate: password.focus = True

        MDTextFieldRound:
            id: password
            hint_text: 'password'
            icon_left: 'eye-off'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5}
            password: True
            normal_color: app.theme_cls.accent_color
            color_active: 1,1,170/255,1
            required: True
            on_text_validate: root.manager.current = 'home'

        MDRoundFlatButton:
            id: login_button
            text: 'LOG IN'
            font_size: 12
            pos_hint: {'center_x': 0.5}
            on_press: root.manager.current = 'home'
        MDRoundFlatButton:
            text: 'SIGN UP'
            font_size: 12
            pos_hint: {'center_x': 0.5}
            on_press: root.manager.current = 'logintype'
