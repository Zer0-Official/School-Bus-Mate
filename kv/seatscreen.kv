# PROBLEM: MDToolbar does not show up on this screen

<SeatScreen>:
    MDFloatLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'School Bus Mate'
            right_action_items: [["dots-vertical", lambda x: app.triDotMenu(x) ]]

        MDBottomNavigation:

            MDBottomNavigationItem:
                name: 'seats'
                text: 'Seats'
                icon: 'seat-passenger'
                on_tab_release:
                    root.manager.current = 'seats'

            MDBottomNavigationItem:
                name: 'routes'
                text: 'Routes'
                icon: 'map'
                on_tab_release:
                    root.manager.current = 'routes'

            MDBottomNavigationItem:
                name: 'reports'
                text: 'Reports'
                icon: 'account-alert'
                on_tab_release:
                    root.manager.current = 'reports'

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: seatsHeader
            text: 'Current Arrangements'
            font_size: 35
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            color: app.theme_cls.accent_color
            padding_y: 15
