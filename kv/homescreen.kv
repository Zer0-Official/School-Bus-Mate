<HomeScreen>:

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'School Bus Mate'
            right_action_items: [["dots-vertical", lambda x: app.triDotMenu(x) ]]
            left_action_items: [[Image:(source: 'images/Mr J Tech Logo Icon.png')]]

        MDBottomNavigation:

            MDBottomNavigationItem:
                name: 'seats'
                text: 'Seats'
                icon: 'seat-passenger'
                on_tab_release:
                    root.manager.current = 'seatscreen.kv'

            MDBottomNavigationItem:
                name: 'routes'
                text: 'Routes'
                icon: 'map'
                on_tab_release:
                    root.manager.current = 'routescreen.kv'

            MDBottomNavigationItem:
                name: 'reports'
                text: 'JS'
                icon: 'language-javascript'

                MDLabel:
                    text: 'JS'
                    halign: 'center'
